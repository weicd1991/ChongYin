<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jsmy.chongyin.activity.PersonCenterActivity"
    android:fitsSystemWindows="true"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/base_rectangle3">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@mipmap/yonghuzhongxin_shezhi_icon" />

        <com.jsmy.chongyin.view.CircleImageView
            android:id="@+id/img_tx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/img_setting"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/tx_img"
            app:civ_border_width="2dp"
            app:civ_border_color="#8AA1EF"/>

        <com.jsmy.chongyin.view.CircleImageView
            android:id="@+id/img_chande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_tx"
            android:layout_alignRight="@+id/img_tx"
            android:src="@mipmap/change"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/rela_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_tx"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_dj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yonghuzhongxin_dengji_icon" />

            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_dj"
                android:layout_centerHorizontal="true"
                android:text="V7"
                android:textColor="#fff"
                android:textSize="8sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_tx"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#D5D5D5"
            android:textSize="12sp" />

        <!-- 宠物组 -->
        <RelativeLayout
            android:id="@+id/rela_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_id"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp">


            <ImageView
                android:id="@+id/img_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yonghuzhongxin_zhuomianchongwu_icon" />

            <TextView
                android:id="@+id/btn_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_pet"
                android:text="桌面宠物"
                android:textColor="#888"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_arrow_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/youjiantou" />

            <TextView
                android:id="@+id/tv_close_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:text="关闭"
                android:textColor="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/img_pet"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#D5D5D5" />

        </RelativeLayout>
        <!-- 会员组 -->
        <RelativeLayout
            android:id="@+id/rela_huiyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_pet"
            android:layout_marginLeft="10dp">


            <ImageView
                android:id="@+id/img_huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yonghuzhongxin_chengweihuiyuan_icon" />

            <TextView
                android:id="@+id/btn_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_huiyuan"
                android:text="成为会员"
                android:textColor="#888"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_arrow_huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/youjiantou" />

            <TextView
                android:id="@+id/tv_close_huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:text=""
                android:textColor="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/img_huiyuan"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#D5D5D5" />

        </RelativeLayout>
        <!-- 商店组 -->
        <RelativeLayout
            android:id="@+id/rela_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_huiyan"
            android:layout_marginLeft="10dp">


            <ImageView
                android:id="@+id/img_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yonghuzhongxin_chongwushangdian_icon" />

            <TextView
                android:id="@+id/btn_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_mark"
                android:text="宠物商店"
                android:textColor="#888"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_arrow_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/youjiantou" />

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:text=""
                android:textColor="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/img_mark"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#D5D5D5" />

        </RelativeLayout>
        <!-- 弹幕组 -->
        <RelativeLayout
            android:id="@+id/rela_danmu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_mark"
            android:layout_marginLeft="10dp">


            <ImageView
                android:id="@+id/img_danmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/barrage_message" />

            <TextView
                android:id="@+id/btn_danmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_danmu"
                android:text="弹幕留言"
                android:textColor="#888"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_arrow_danmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/youjiantou" />

            <TextView
                android:id="@+id/tv_danmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:text=""
                android:textColor="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/img_danmu"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#D5D5D5" />

        </RelativeLayout>
        <!-- 朋友组 -->
        <RelativeLayout
            android:id="@+id/rela_frend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_danmu"
            android:layout_marginLeft="10dp">


            <ImageView
                android:id="@+id/img_frend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yonghuzhongxin_xinpengyou_icon" />

            <TextView
                android:id="@+id/btn_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_frend"
                android:text="新朋友"
                android:textColor="#888"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_arrow_frend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/youjiantou" />


            <com.jsmy.chongyin.view.CircleImageView
                android:id="@+id/img_new"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_arrow_frend"
                android:layout_marginRight="10dp"
                android:src="@mipmap/tx_img"
                android:visibility="gone"/>


            <com.jsmy.chongyin.view.CircleImageView
                android:id="@+id/img_dian"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_marginTop="5dp"
                android:layout_alignRight="@+id/img_new"
                android:layout_marginRight="-15px"
                android:src="#ff4848"
                android:visibility="gone"/>



            <TextView
                android:id="@+id/tv_close_frend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:text=""
                android:textColor="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/img_frend"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#D5D5D5" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:src="@mipmap/chacha" />

    </RelativeLayout>

</RelativeLayout>
