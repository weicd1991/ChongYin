<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_being_vip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context="com.jsmy.chongyin.activity.BeingVIPActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/base_rectangle3">

        <com.jsmy.chongyin.view.CircleImageView
            android:id="@+id/img_tx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/tx_img"
            app:civ_border_width="2dp"
            app:civ_border_color="#8AA1EF"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_tx"
            android:text="知足者常乐"
            android:textColor="#888"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_tx"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_tx"
            android:background="@drawable/base_rectangle7"
            android:text="LV7"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_lv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_lv"
            android:text="500"
            android:textColor="#5DC080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_curr"
            android:layout_toRightOf="@+id/tv_curr"
            android:text="/600"
            android:textColor="#aaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_hytq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_all"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="会员特权"
            android:textColor="#FEA531"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bg_hytq"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_hytq"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="#D5D5D5" />

        <LinearLayout
            android:id="@+id/linear_towimg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/bg_hytq"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/huiyuantequan_huiyuanzhuanxiangchongwu" />

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="会员专享宠物"
                    android:textColor="#888"
                    android:textSize="15sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D5D5D5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/huiyuantequan_choujiangquguanggao" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="抽奖去广告"
                    android:textColor="#888"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/bg_towimg"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/linear_towimg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#D5D5D5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/bg_towimg"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/huiyuantequan_shiwu8zhe" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="食物8折"
                    android:textColor="#888"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D5D5D5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/huiyuantequan_yuanbao9zhe" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_4"
                    android:layout_centerHorizontal="true"
                    android:text="元宝9折"
                    android:textColor="#888"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D5D5D5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/huiyuantequan_chongwujiasu"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_5"
                    android:layout_centerHorizontal="true"
                    android:text="宠物加速成长"
                    android:textColor="#888"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_check"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/img_close"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_bg"
            android:text="立即开通"
            android:textColor="#fff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:src="@mipmap/fanhui" />

    </RelativeLayout>

</RelativeLayout>
