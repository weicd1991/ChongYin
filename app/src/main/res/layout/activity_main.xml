                android:maxLines="1"
                android:textColor="#fff"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/img_yuanbao_jia"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_gold2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/rela_gold"
            android:src="@mipmap/shouye_yuanbao_iocn" />


        <!-- 等级 -->
        <RelativeLayout
            android:id="@+id/rela_lv"
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/rela_gold"
            android:background="@mipmap/shouye_jindutiao_wujiahao"
            android:gravity="center_vertical"
            android:paddingTop="1px">

            <ProgressBar
                android:id="@+id/probar_lv"
                style="@style/InitProgressBar"
                android:layout_width="match_parent"
                android:layout_height="13.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="1dp"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#fff"
                android:textSize="10sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/rela_lv"
            android:src="@mipmap/shouye_yonghudengji_iocn" />

        <!--  等级对话框 -->
        <RelativeLayout
            android:id="@+id/rela_dengji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_lv"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/rela_lv"
            android:background="@mipmap/dengji_tishikuang"
            android:padding="10dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_dengji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="等级：7"
                android:textColor="#5dc080"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_jingyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dengji"
                android:layout_marginTop="5dp"
                android:text="经验：500/1000"
                android:textColor="#5dc080"
                android:textSize="10sp" />
        </RelativeLayout>

        <!--  元宝对话框 -->
        <RelativeLayout
            android:id="@+id/rela_yuanbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_gold"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/rela_gold"
            android:background="@mipmap/dengji_tishikuang"
            android:padding="10dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_yuanbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="元宝：50000"
                android:textColor="#5dc080"
                android:textSize="10sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_grally2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/xinzengjishi" />

        <ImageView
            android:id="@+id/img_shop2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_grally2"
            android:layout_alignStart="@+id/img_grally2"
            android:layout_below="@+id/img_grally2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/fujinderen" />

        <com.jsmy.chongyin.view.CircleImageView
            android:id="@+id/img_fj"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/img_grally2"
            android:layout_below="@+id/img_shop2"
            android:layout_marginTop="16dp"
            android:src="@mipmap/tx_img"
            android:visibility="visible"
            app:civ_border_color="#88ffffff"
            app:civ_border_width="2dp" />

        <ImageView
            android:id="@+id/img_map2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_grally2"
            android:layout_alignStart="@+id/img_grally2"
            android:layout_below="@+id/img_shop2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/shouye_paihangbang_iocn"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_hd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/img_grally2"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/di"
            android:padding="5dp"
            android:src="@mipmap/zhuye" />

        <LinearLayout
            android:id="@+id/linear_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_close"
            android:layout_marginTop="-5dp"
            android:background="#EDEEF2"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_drawer_bg"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_send"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/tv_send"
                    android:layout_alignTop="@+id/tv_send"
                    android:layout_toLeftOf="@+id/tv_send"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:hint="弹幕留言"
                    android:maxLength="40"
                    android:minHeight="35dp"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_tab"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/linear_icon"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tab_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@mipmap/tanmu" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_emoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EDEEF2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@drawable/f701" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EDEEF2">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@mipmap/shouye_jitui_iocn" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_groud"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EDEEF2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@mipmap/shouye_beijingtu_iocn" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EDEEF2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@mipmap/shouye_gouwushangcheng" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EDEEF2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@mipmap/shouye_paihangbang_iocn" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_pan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EDEEF2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@mipmap/shouye_choujiang_iocn" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rela_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_tab"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rela_danmu_d"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#FFFFFF"
                android:visibility="visible">

                <com.jsmy.chongyin.view.RefreshRecyclerView
                    android:id="@+id/recycler_frend"
                    android:layout_width="wrap_content"
                    android:layout_height="155dp"
                    android:layout_centerInParent="true"
                    android:background="#EEFFFFFF"
                    app:load_more_able="false"
                    app:refresh_able="false">

                </com.jsmy.chongyin.view.RefreshRecyclerView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_food"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#FFFFFF"
                android:visibility="gone">

                <com.jsmy.chongyin.view.RefreshRecyclerView
                    android:id="@+id/recycler_food"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_centerInParent="true"
                    android:background="#EEFFFFFF"
                    app:load_more_able="false"
                    app:refresh_able="false">

                </com.jsmy.chongyin.view.RefreshRecyclerView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_scrollView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#FFFFFF"
                android:visibility="gone">

                <android.support.v4.view.ViewPager
                    android:id="@+id/my_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/linear_bottom">

                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/linear_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rela_cy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="2dp"
                            android:src="@drawable/f701" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rela_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#EDEEF2">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="2dp"
                            android:src="@drawable/f481" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rela_dw"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#EDEEF2">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="2dp"
                            android:src="@drawable/f421" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rela_vip_d"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#EDEEF2">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="2dp"
                            android:src="@drawable/emojivip" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EDEEF2">


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_groud"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#FFFFFF"
                android:visibility="gone">

                <com.jsmy.chongyin.view.RefreshRecyclerView
                    android:id="@+id/recycler_groud"
                    android:layout_width="wrap_content"
                    android:layout_height="155dp"
                    android:layout_centerInParent="true"
                    android:background="#EEFFFFFF"
                    app:load_more_able="false"
                    app:refresh_able="false">

                </com.jsmy.chongyin.view.RefreshRecyclerView>


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
