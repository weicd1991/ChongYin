                    android:layout_marginTop="8dp"
                    android:text="V7"
                    android:textColor="#fff"
                    android:textSize="5sp" />


            </RelativeLayout>

            <com.jsmy.chongyin.view.CircleImageView
                android:id="@+id/frend_img_cwtx1"
