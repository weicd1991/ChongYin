                android:textSize="10sp" />

            <ImageView
                android:id="@+id/img_paihang2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/frend_img_tx2"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/frend_tv_nc2"
                android:src="@mipmap/shouye_paihangbang_iocn" />

            <TextView
                android:id="@+id/frend_tv_nc2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/frend_img_cwtx2"
