<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jsmy.chongyin.activity.PersonDataActivity"
    android:fitsSystemWindows="true"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/base_rectangle3">

        <com.jsmy.chongyin.view.CircleImageView
            android:id="@+id/img_tx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/img_setting"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/tx_img"
            android:layout_marginTop="55dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#8AA1EF"/>

        <com.jsmy.chongyin.view.CircleImageView
            android:id="@+id/img_chande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_tx"
            android:layout_alignRight="@+id/img_tx"
            android:src="@mipmap/change"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/rela_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_tx"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_dj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yonghuzhongxin_dengji_icon" />

            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_dj"
                android:layout_centerHorizontal="true"
                android:text="V7"
                android:textColor="#fff"
                android:textSize="8sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_tx"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#D5D5D5"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rela_nc_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_id"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tv_left_nc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#D5D5D5"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_nc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_left_nc"
                android:textColor="#333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_nc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/youjiantou" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nc_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rela_nc_line"
            android:layout_marginTop="20dp"
            android:background="#D5D5D5" />

        <RelativeLayout
            android:id="@+id/rela_xb_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nc_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_left_xb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#D5D5D5"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_xb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_left_xb"
                android:textColor="#333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_xb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/youjiantou" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_xb_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rela_xb_line"
            android:layout_marginTop="20dp"
            android:background="#D5D5D5" />

        <RelativeLayout
            android:id="@+id/rela_nl_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_xb_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_left_nl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textColor="#D5D5D5"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_nl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_left_nl"
                android:textColor="#333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_nl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/youjiantou" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nl_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rela_nl_line"
            android:layout_marginTop="20dp"
            android:background="#D5D5D5" />

        <RelativeLayout
            android:id="@+id/rela_qm_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nl_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_left_qm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名"
                android:textColor="#D5D5D5"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_qm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/youjiantou" />

            <TextView
                android:id="@+id/tv_qm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/img_qm"
                android:layout_toRightOf="@+id/tv_left_qm"
                android:textColor="#333"
                android:textSize="15sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_qm_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rela_qm_line"
            android:layout_marginTop="20dp"
            android:background="#D5D5D5" />


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:src="@mipmap/fanhui" />

    </RelativeLayout>

</RelativeLayout>
