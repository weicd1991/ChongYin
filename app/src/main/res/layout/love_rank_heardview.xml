<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rela_heard"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@android:color/transparent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/rela_f"
        android:background="#eeffffff">


        <com.jsmy.chongyin.view.CircleImageView
            android:id="@+id/img_tx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/tx_img"
            app:civ_border_width="2dp"
            app:civ_border_color="#8AA1EF"/>

        <RelativeLayout
            android:id="@+id/rela_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="-10"
                android:src="@mipmap/haoyouliebiao_touxianghuangguan_icon" />

            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:rotation="-45"
                android:text="V7"
                android:textColor="#fff"
                android:textSize="5sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_tx"
            android:layout_marginLeft="2dp"
            android:src="@mipmap/aixinpaihangbang_no1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_tx"
            android:layout_marginLeft="2dp"
            android:background="@drawable/love_rank_tvmath_bg"
            android:src="@mipmap/aixinpaihangbang_no1"
            android:text=" 8 "
            android:textColor="#fff"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_tx"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:text="飞翔荷兰人"
            android:textColor="#333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_loveall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_tx"
            android:layout_alignLeft="@+id/tv_name"
            android:text="爱心总数：3000"
            android:textSize="10sp"/>

        <RelativeLayout
            android:id="@+id/rela_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/aixinpaihangbang_aixin_xuanzhong" />

            <TextView
                android:id="@+id/tv_love_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="5"
                android:textColor="#fff"
                android:textSize="10sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_love_left_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/rela_love"
            android:text="90"
            android:textColor="#888"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rela_item"
        android:background="#ccc" />

    <RelativeLayout
        android:id="@+id/rela_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_rectangle3"
        android:layout_below="@+id/rela_heard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/aixinpaihangbang_biaoti" />

        <ImageView
            android:id="@+id/img_zhou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shouye_yuanbao_iocn"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:id="@+id/linear_fbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_bt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/aixinpaihangbang_tishi_zuo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="周日24点重置/今天还可送"
                android:textColor="#888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#5DC080"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个"
                android:textColor="#888"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/aixinpaihangbang_tishi_you" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>