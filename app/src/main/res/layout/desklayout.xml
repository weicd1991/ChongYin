<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rela_img"
            android:layout_marginLeft="20dp"
            android:layout_alignRight="@+id/rela_img"
            android:layout_marginRight="20dp"
            android:background="@drawable/base_rectangle2"
            android:gravity="center"
            android:padding="5dp"
            android:text="我只是刚好路过而已，才不是特地来看你呢！"
            android:textColor="#fff"
            android:textSize="10sp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:id="@+id/rela_img">

            <ImageView
                android:id="@+id/img_z"
                android:layout_width="108dp"
                android:layout_height="134dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_panding"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_alignTop="@+id/rela_img"
            android:layout_alignBottom="@+id/rela_img"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_book"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/shouye_qipao_yuan"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@mipmap/zhuomian_book" />

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/shouye_qipao_yuan"
                android:padding="5dp"
                android:src="@mipmap/zhuomian_zhuye" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/shouye_qipao_yuan"
                android:padding="5dp"
                android:src="@mipmap/zhuomian_guanbi" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>